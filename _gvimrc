set titlestring=GVim

if has('win32')
    au GUIEnter * simalt ~x
endif

colorscheme desert
hi EndofBuffer guibg=gray20
hi VertSplit guibg=gray20
hi QuickFixLine guibg=NONE guifg=NONE
au InsertEnter * hi Cursor guibg=#ee4444 guifg=black
au InsertLeave * hi Cursor guibg=khaki guifg=slategray

set guifont=Ubuntu_Mono:h18
set guioptions-=e
set guioptions-=T
set guioptions-=m
set guioptions-=R
set guioptions-=r
set guioptions-=L
set guioptions-=l
set guioptions+=c
set guioptions+=!
set guicursor=n:block-Cursor-blinkon0
set guicursor+=i:block-Cursor-blinkon0

command! FullScreen :call libcallnr("gvimfullscreen.dll", "ToggleFullScreen", 0)
